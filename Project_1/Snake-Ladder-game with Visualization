    then
        current_number=29
        echo "Congratulations, You got a ladder"
        echo "   To $current_number"
        echo " //--^--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "    From $cummulative_num"
        echo "\n"

    elif [ $current_number -eq 10 ]
    then
        current_number=19
        echo "Congratulations, You got a ladder"
        echo "   To $current_number"
        echo " //--^--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "    From $cummulative_num"
        echo "\n"

    elif [ $current_number -eq 35 ] 
    then
        current_number=45
        
        echo "Congratulations, You got a ladder"
        echo "   To $current_number"
        echo " //--^--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "    From $cummulative_num"
        echo "\n"

        
