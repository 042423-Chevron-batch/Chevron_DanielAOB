    then
        current_number=15
        echo "Congratulations, You got a ladder"
        echo "   To $current_number"
        echo " //--^--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "    From $cummulative_num"
        echo "\n"
    #Snake bite

    elif [ $current_number -eq 8 ] 
