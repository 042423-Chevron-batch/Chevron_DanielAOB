        echo " //--^--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "    $cummulative_num"
        echo "\n"

    elif [ $current_number -eq 14 ]
    then
        current_number=42
        echo "Congratulations, You got a ladder"
        echo "   To $current_number"
        echo " //--^--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "    From $cummulative_num"
        echo "\n"

    elif [ $current_number -eq 31 ] 
    then
        current_number=40
        echo "Congratulations, You got a ladder"
        echo "   To $current_number"
        echo " //--^--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "//---|--//"
        echo "    From $cummulative_num"
        echo "\n"

