    1)
        echo " ------- "
        echo "|       |"
        echo "|   *   |"
        echo "|       |"
        echo " ------- "
        echo "\n"
        ;;
    2)
        echo " ------- "
        echo "| *     |"
        echo "|       |"
        echo "|     * |"
        echo " ------- "
        echo "\n"
        ;;
    3)
        echo " ------- "
        echo "| *     |"
        echo "|   *   |"
        echo "|     * |"
        echo " ------- "
        echo "\n"
        ;;
    4)
        echo " ------- "
        echo "| *   * |"
        echo "|       |"
        echo "| *   * |"
        echo " ------- "
        echo "\n"
        ;;
    5)
        echo " ------- "
        echo "| *   * |"
        echo "|   *   |"
        echo "| *   * |"
        echo " ------- "
        echo "\n"
