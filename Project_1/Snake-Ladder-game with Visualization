        echo "      (   /  )"
        echo "       \(__)|"
        echo "         ||"
        echo "         ||"
        echo "          \\"
        echo "           \\"
        echo "           //" 
        echo "          //" 
        echo "         //" 
        echo "         \\" 
        echo "          \_\_"
        echo "        From $current_number"
        echo "\n"

    elif [ $current_number -eq 31 ]
    then 
        current_number=9
        echo "You aint lucky this time, You got bitten by a snake"

       echo "       From $cummulative_num"
        echo "        ____"
        echo "       / . .\ "
        echo "      (   /  )"
        echo "       \(__)|"
        echo "         ||"
        echo "         ||"
        echo "          \\"
        echo "           \\"
        echo "           //" 
        echo "          //" 
        echo "         //" 
        echo "         \\" 
        echo "          \_\_"
        echo "          To $current_number"
        echo "\n"

    elif [ $current_number -eq 43 ]
    then 
        current_number=12
        echo "You aint lucky this time, You got bitten by a snake"
        
         echo "       From $cummulative_num"
        echo "        ____"
        echo "       / . .\ "
        echo "      (   /  )"
        echo "       \(__)|"
        echo "         ||"
        echo "         ||"
        echo "          \\"
        echo "           \\"
        echo "           //" 
        echo "          //" 
        echo "         //" 
        echo "         \\" 
        echo "          \_\_"
        echo "          To $current_number"
        echo "\n"
    elif [ $current_number -eq 32 ]
    then 
        current_number=30
        echo "You aint lucky this time, You got bitten by a snake"
        echo "       From $cummulative_num"
        echo "        ____"
        echo "       / . .\ "
        echo "      (   /  )"
        echo "       \(__)|"
        echo "         ||"
        echo "         ||"
        echo "          \\"
        echo "           \\"
        echo "           //" 
        echo "          //" 
        echo "         //" 
        echo "         \\" 
        echo "          \_\_"
        echo "          To $current_number"
        echo "\n"
    elif [ $current_number -eq 49 ]
    then 
        current_number=39
        echo "You aint lucky this time, You got bitten by a snake"
        echo "       From $cummulative_num"
        echo "        ____"
        echo "       / . .\ "
        echo "      (   /  )"
        echo "       \(__)|"
        echo "         ||"
        echo "         ||"
        echo "          \\"
        echo "           \\"
        echo "           //" 
        echo "          //" 
        echo "         //" 
        echo "         \\" 
        echo "          \_\_"
        echo "          To $current_number"
        echo "\n"
    elif [ $current_number -eq 46 ]
    then 
        current_number=36
        echo "You aint lucky this time, You got bitten by a snake"
         echo "       From $cummulative_num"
        echo "        ____"
        echo "       / . .\ "
        echo "      (   /  )"
        echo "       \(__)|"
        echo "         ||"
        echo "         ||"
        echo "          \\"
        echo "           \\"
        echo "           //" 
        echo "          //" 
        echo "         //" 
        echo "         \\" 
        echo "          \_\_"
        echo "          To $current_number"
        echo "\n"
    elif [ $current_number -eq 47 ]
    then 
        current_number=37
        echo "You aint lucky this time, You got bitten by a snake"
         echo "       From $cummulative_num"
        echo "        ____"
        echo "       / . .\ "
        echo "      (   /  )"
        echo "       \(__)|"
        echo "         ||"
        echo "         ||"
        echo "          \\"
        echo "           \\"
        echo "           //" 
        echo "          //" 
        echo "         //" 
        echo "         \\" 
        echo "          \_\_"
        echo "          To $current_number"
        echo "\n"
    elif [ $current_number -eq 27 ]
    then 
        current_number=17
        echo "You aint lucky this time, You got bitten by a snake"
        echo "       From $cummulative_num"
        echo "        ____"
        echo "       / . .\ "
        echo "      (   /  )"
        echo "       \(__)|"
        echo "         ||"
        echo "         ||"
        echo "          \\"
        echo "           \\"
        echo "           //" 
        echo "          //" 
        echo "         //" 
        echo "         \\" 
        echo "          \_\_"
        echo "          To $current_number"
        echo "\n"
    elif [ $current_number -eq 50 ]
    then 
        echo "Congratulations, you got the magic number 50!"
        break
    elif [ $current_number -gt 50 ]
    then 
        echo "you have exceeded the limit, try again next time"
        break

    else

        echo "You neither got a ladder nor got bitten by the snake, you made a stride now at $current_number!"

    fi
    starting_number=$cummulative_num
    counter=$(($counter + 1))
    if [ $counter -ge 10 ]
    then 
        echo "You have exhausted your number of trials: $counter without reaching 50"
        echo "You scored $((50-$current_number)) out of 50"
        echo "Try again next time!"
        break
    fi
    

    done
